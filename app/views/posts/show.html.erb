<h2>
  <%= link_to image_tag("caret8.png", :border => 0), votes_path(post_id: @post.id, post_page: true), method: :post%>
  <%= @post.score %>
  <br>
  <%= @post.title %>
</h2>
<p><%= @post.body %></p>

<h3>Comments</h3>

<% @post.comments.each do |comment| %>
  <p><%= comment.content %></p>
<% end %>
