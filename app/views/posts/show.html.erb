<h2>
  <span class = "vote"><%= link_to image_tag("caret8.png", :border => 0), votes_path(post_id: @post.id), method: :post%></span>
  <%= @post.score %>
  <br>
  <%= @post.title %>
</h2>
<p><%= @post.body %></p>

<h3>Comments</h3>

<ul>
  <%= form_for @comment, :url=> post_comments_path(:post_id => @post.id) do |f| %>
  <li>
    <% f.label :content %>
    <%= f.text_area :content %>
  </li>
  <li>
    <%= f.submit "Submit" %>
  </li>
  <% end %>
</ul>

<% @post.comments.each do |comment| %>
  <p><%= comment.content %></p>
<% end %>
