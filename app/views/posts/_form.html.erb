<ul>
  <%= form_for @post, remote: true do |f| %>
    <li>
      <%f.label :title %>
      <%= f.text_field :title, :placeholder => "Give your Secret a Title"%>
    </li>
    <br>
    <li>
      <% f.label :body %>
      <%= f.text_area :body, :placeholder => "Tell Us a Secret" %>
    </li>
    <li>
      <%= f.submit "Share Your Secret", remote: true %>
    </li>
  <% end %>
</ul>
