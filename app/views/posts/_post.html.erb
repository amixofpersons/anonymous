<div class='single-post'>
<h2>
  <span class = "vote">
    <% if already_voted?(@post)%>
    <%= @post.score %>
    <% else %>
    <%= link_to image_tag("caret8.png", :border => 0), votes_path(post_id: @post.id), method: :post, remote: true%><%= @post.score %>
    <% end %>
  </span>
  <br>
  <%= @post.title %>
</h2>
<p><%= @post.body %></p>
</div>