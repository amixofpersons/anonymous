<% @comments.each do |comment| %>

  <p><%= comment.content %></p>
  <%= link_to image_tag("https://cdn2.iconfinder.com/data/icons/windows-8-metro-style/512/edit.png", size:"20x20"), edit_post_comment_path(comment.post, comment) %>
  <%= link_to image_tag("http://png-4.findicons.com/files/icons/1580/devine_icons_part_2/128/trash_recyclebin_empty_closed.png", size:"23x23"), post_comment_path(comment.post, comment), :method => :delete %>
<% end %>
