<!DOCTYPE html>
<html>
<head>
  <title>Anonymous</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Josefin+Slab' rel='stylesheet' type='text/css'>
</head>
<body>
 <div class="wrapper">
    <header>
      <h1><%= link_to "Anonymous", root_path %></h1>
    </header>

      <div class='menu-toggle'>
        <img alt="menu" src="/assets/menu-6x.png">

          <ul class="nav-list">
            <li class = "nav_list_items"><%= link_to 'Home', root_path%></li>
            <% if current_user %>
              <li class = "nav_list_items"><%= link_to 'Profile', profile_path  %></li>
              <li class = "nav_list_items"><%= link_to 'Logout', logout_path  %></li>
            <% else %>
              <li class = "nav_list_items"><%= link_to 'Login', login_path %></li>
              <li class = "nav_list_items"><%= link_to 'Signup', signup_path %></li>
            <% end %>
            <li class = "nav_list_items"><%= link_to 'All Secrets', posts_path %></li>
          </ul>

        </img>
      </div>

    <div class='container'>
      <%= yield %>
    </div>
  </div>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
